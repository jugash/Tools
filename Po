apiVersion: kyverno.io/v1
kind: ClusterPolicy
metadata:
  name: validate-cert-cn-against-namespace-label
spec:
  validationFailureAction: enforce
  background: true
  rules:
    - name: match-cn-to-namespace-label
      match:
        any:
          - resources:
              kinds:
                - Certificate
      context:
        - name: nslabels
          apiCall:
            urlPath: "/api/v1/namespaces/{{request.namespace}}"
            jmesPath: "metadata.labels"
      validate:
        message: "The Certificate commonName must contain the namespace label 'team'."
        pattern:
          spec:
            commonName: "*{{ nslabels.team }}*"
